@page
@model WikiWikiWiki.Pages.SearchModel
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<hr />
<br />
@if (Model.Articles.Any())
{
    <dl>
        @foreach (var article in Model.Articles)
        {
            <dt><a asp-page="Article" asp-route-id="@article.Id">@article.Title</a> <em>- Last Updated @article.LastUpdated (UTC)</em></dt>
            <dd>@article.Content.Substring(0, Math.Min(350, article.Content.Length))</dd>
        }
    </dl>
}
else
{
    <h3>Could not find any articles matching the specified search terms. Please try again.</h3>
}